<main>
  <div class="slider-area ">
    <div class="slider-active">
      <div class="single-slider slider-height d-flex align-items-center slide-bg">
        <div class="container">
          <div class="row justify-content-between align-items-center">
            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
              <% unless notice.blank? %>
                <div class="alert alert-info alert-dismissible fade show">
                  <%= notice %>
                </div>
              <% end %>
              <% unless alert.blank? %>
                <div class="alert alert-danger alert-dismissible fade show">
                  <%= alert %>
                </div>
              <% end %>
              <div class="hero__caption">
                <h1 class="animated myElement fadeInLeft slow">Select Your New Perfect Style</h1>
                <p class="animated myElement fadeInLeft slow">Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat is aute irure.</p>
                <% unless user_signed_in? %>
                  <div class="hero__btn">
                    <%= link_to "Login Now!", new_user_session_path, class: "btn hero-btn animated myElement fadeInLeft" %>
                  </div>
                  <p class="animated myElement fadeInLeft slow loging-out-p">
                    <%= link_to "Don't have account? Sign-up now!", new_user_registration_path, class: "signing-up"%>
                  </p>
                <% else %>
                  <div class="hero__btn">
                    <%= link_to "Shop Now!", products_path, class: "btn hero-btn animated myElement fadeInLeft" %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-4 col-sm-4 d-none d-sm-block">
              <div class="hero__img animated myElement bounceIn slower">
                <%= image_tag('hero/watch.png', class: 'heartbeat') %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <section class="new-product-area section-padding30">
