              <%= link_to product_path(@products[0]) do %>
                <div class="product-img">
                  <%= image_tag(@products[0].images.first) %>
                </div>
              <% end %>
              <div class="product-caption">
                <h3>
                  <%= link_to @products[0].name, product_path(@products[0]) %>
                </h3>
                <span>$
