<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <main>
    <div class="slider-area ">
      <div class="single-slider slider-height2 d-flex align-items-center">
        <div class="container">
          <div class="row">
            <div class="col-xl-12">
              <div class="hero-cap text-center">
                <h2>Login</h2>
              </div>
            </div>
          </div>
        </div>
      </div>
      <section class="login_part section_padding ">
        <div class="container">
          <% unless notice.blank? %>
            <div class="alert alert-info alert-dismissible fade show">
              <%= notice %>
            </div>
          <% end %>
          <% unless alert.blank? %>
            <div class="alert alert-danger alert-dismissible fade show">
              <%= alert %>
            </div>
          <% end %>
          <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
              <div class="login_part_text text-center">
                <div class="login_part_text_iner">
                  <h2>New to our Shop?</h2>
                  <p>There are advances being made in science and technology
                    everyday, and a good example of this is the</p>
                  <%= link_to "Create Account", new_user_registration_path, class: "btn_3" %>
                </div>
              </div>
            </div>
            <div class="col-lg-6 col-md-6">
              <div class="login_part_form">
                <div class="login_part_form_iner">
                  <h3>Welcome Back ! <br>
                    Please Sign in now</h3>
                  <form class="row contact_form" action="#" method="post" novalidate="novalidate">
                    <div class="col-md-12 form-group p_star">
                      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                    </div>
                    <div class="col-md-12 form-group p_star">
                      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
                    </div>
                    <div class="col-md-12 form-group">
                      <div class="creat_account d-flex align-items-center">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                      <%= f.submit "Log in", class: "btn_3"%>
                    </div>
                    <div>
                      <%= link_to "Forgot your password?", new_password_path(resource_name), id: 'forget-link' %>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
<% end %>
